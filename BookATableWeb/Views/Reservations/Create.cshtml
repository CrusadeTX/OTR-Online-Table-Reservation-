@model BookATableWeb.ViewModels.ReservationsCreateViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.ReservationTime, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.ReservationTime, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.ReservationTime)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PeopleCount, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.PeopleCount, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.PeopleCount)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Comment, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Comment, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Comment)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ResraurantId, "Restaurant", new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.ResraurantId, new SelectList(ViewBag.RestaurantId, "Value", "Text"))
            @Html.ValidationMessageFor(model => model.ResraurantId)
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "User", new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.UserId, new SelectList(ViewBag.UserId, "Value", "Text"))
            @Html.ValidationMessageFor(model => model.UserId)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", "Restaurants", new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}