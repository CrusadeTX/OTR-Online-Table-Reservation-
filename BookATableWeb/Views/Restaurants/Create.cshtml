@model BookATableWeb.ViewModels.RestaurantCreateViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class="control-label col-md-2"})
            @Html.TextBoxFor(model => model.Name, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Address, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Phone, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Email, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Capacity, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Capacity, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.OpenHour, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.OpenHour, new { @class = "control-label col-md-10", type = "time" })
            @Html.ValidationMessageFor(model => model.OpenHour)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CloseHour, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.CloseHour, new { @class = "control-label col-md-10", type = "time" })
            @Html.ValidationMessageFor(model => model.CloseHour)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ManagerId, "Manager", new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.ManagerId, new SelectList(ViewBag.ManagerId, "Value", "Text"))
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-success"/>
                @Html.ActionLink("Cancel","Index","Restaurants",new { @class="btn btn-danger"})
            </div>
        </div>
    </div>
}

