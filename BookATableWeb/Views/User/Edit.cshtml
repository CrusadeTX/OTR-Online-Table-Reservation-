@model BookATableWeb.ViewModels.UsersEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Name, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            @Html.PasswordFor(model => model.Password, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Phone, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Email, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", "Users", new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}
